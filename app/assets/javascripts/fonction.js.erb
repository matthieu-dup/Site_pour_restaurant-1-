function SetDecimal(euros)
{
    var n = euros.toFixed(2);
    return n;
}

function SetPanierEuros(ee)
{
    if (ee == null){
        document.getElementById("panierEuros").innerHTML = " 0.00 €";
    }else{
        ee = SetDecimal(ee);
        document.getElementById("panierEuros").innerHTML = (" " + ee + " €");
    }
}
function SetPanierArticles(ee)
{
    if (ee == 0 || ee == null){
        document.getElementById("panierArticles").innerHTML = "0 article";
    }else{
        document.getElementById("panierArticles").innerHTML = (ee + " article(s)") ;
    }
}
function SetQuantityDown(ee)
{
    if (ee <= 1){
        document.getElementById("quantity").value = 1;
    }else{
        document.getElementById("quantity").value = (ee - 1);
    }
}

